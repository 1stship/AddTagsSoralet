{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make: build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": ["make"],
      "args": ["build"],
      "problemMatcher": "$gcc"
    },
    {
      "label": "make: release",
      "group": "build",
      "command": ["make"],
      "args": ["release"],
      "problemMatcher": "$gcc"
    },
    {
      "label": "make: clean",
      "command": ["make"],
      "args": ["clean"]
    }
  ]
}
